<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.packito.targetor"
    android:versionCode="101"
    android:versionName="1.01" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="cz.packito.targetor.TargetorApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cz.packito.targetor.TargetorActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.packito.targetor.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cz.packito.targetor.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cz.packito.targetor.BTFindActivity"
            android:screenOrientation="landscape"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity
            android:name="cz.packito.targetor.InfoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity
            android:name="cz.packito.targetor.FinishActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="cz.packito.targetor.LevelPickerActivity"
            android:screenOrientation="landscape"
             android:theme="@style/DialogTheme" >
        </activity>
    </application>

</manifest>